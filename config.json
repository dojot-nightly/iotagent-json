{
  "mqtt": {
    "host": "mqtt",
    "port" : 1883,
    "protocolId": "MQIsdp",
    "protocolVersion": 3,
    "secure": false,
    "tls": {
      "key": "certs/iotagent.key",
      "cert": "certs/iotagent.crt",
      "ca": [ "certs/ca.crt" ],
      "version": "TLSv1_2_method"
    }
  },
  "broker": {
    "host": "zookeeper:2181",
    "type": "kafka",
    "subject": "device-data",
    "contextBroker": "http://data-broker"
  },
  "device_manager": {
    "consumerOptions": {
      "kafkaHost" : "kafka:9092",
      "sessionTimeout": 15000,
      "groupId": "iotagent"
    },
    "inputSubject": "dojot.device-manager.device"
  },
  "tenancy": {
    "manager": "http://auth:5000",
    "subject": "dojot.tenancy",
    "consumerOptions": {
      "kafkaHost" : "kafka:9092",
      "sessionTimeout": 15000,
      "groupId": "iotagent"
    }
  }
}
